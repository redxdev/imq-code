{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "imquery",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#valuekeywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#wordoperators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#singlestrings"
		}
	],

	"repository": {
		"comment": {
			"patterns": [{
				"name": "comment.line.number-sign",
				"match": "#.*$"
			}]
		},

		"keywords": {
			"patterns": [{
				"name": "keyword.control.imq",
				"match": "\\b(func|delete|break|return|in|where|out|from|if|else|for|while|do|loop|import|export)\\b"
			}]
		},
		"valuekeywords": {
			"patterns": [{
				"name": "keyword.other.imq",
				"match": "\\b(nan|NaN|nil|true|false)\\b"
			}]
		},

		"operators": {
			"patterns": [{
				"name": "keyword.operator.imq",
				"match": "\\b(\\?|=|!|>|<|\\+|-|\\*|\\/|%|:)\\b"
			}]
		},

		"wordoperators": {
			"patterns": [{
				"name": "keyword.operator.imq",
				"match": "\\b(and|or|not)\\b"
			}]
		},

		"strings": {
			"name": "string.quoted.double.imq",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.imq",
					"match": "\\\\."
				}
			]
		},
		"singlestrings": {
			"name": "string.quoted.single.imq",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.imq",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.imquery"
}